.eventSection {
    background: black;
    display:none;
}

.studentSection {
    display:none;
}

.filterContainer {
    position: fixed;
    bottom: 20px;
    right: 0;
    .filterButton {
        background-color: rgba(255,255,255,.7);
        padding:15px;
        font-size: 1.3em;
        font-weight: bold;
        margin: 5px;
        display: inline-block;
    }
    .filterChoiceMain{
        transition: .5s transform;
        transform-style: preserve-3d;
        background-color: rgba(0,0,0,.9);
        color:white;
        padding:15px;
        font-size: 1.3em;
        font-weight: bold;
        display: none;
        margin: 5px;
    }
    .filterChoiceCont {
        perspective: 300px;
        display: inline-block;
    }
    .filterChoice {
        transition: .5s transform;
        transform-style: preserve-3d;
        background-color: rgba(0,0,0,.9);
        color:white;
        padding:15px;
        font-size: 1.3em;
        font-weight: bold;
        display: inline-block;
        margin: 5px;
    }
    .photoButtonFilters {
        background-color: rgba(255,255,255,.9);
        display:none;
        position: relative;
            padding: 15px;
        bottom: 65px;
    }
    .designButtonFilters {
        background-color: rgba(255,255,255,.9);
            padding: 15px;
        display:none;
        position: relative;
        bottom: 65px;
    }
    .mainFilters {
        position: fixed;
        right:40px;
        bottom: 20px;
    }
}
