

/* container for everything - incl sidebar and mainArea*/
.studentPage {
display: flex;
}

#logoBig {
    display:block;
}
#logoSmall {
    display:none;
}

body{
  font-family: "Neue", sans-serif;
}
.projectTitle {
  font-family: "Neue";
  font-weight: Bold;
}

.projectTitle{
  font-weight:700;
  margin-bottom: .2rem;
}


.projectSelector {
    position: absolute;
    right: 17px;
    top: 10px;
    padding: 15px;
    background-color: rgba(255,255,255,.8);
    .projectSelectorName {
        cursor: pointer;
        display: block;
        font-weight: bold;
        text-align: right;
        padding: 5px;
        font-size: 1.1em;
        &:hover {
            color: darkgray;
        }
    }
}



/*About Page styling*/
.aboutPage{
    display:block;
    color: white;
    background-color: black;
    width: 100%;
}

.eventTitle{
    font-size: 1.75em;
    font-weight: bold;
    margin-bottom:0;
    }

.graduating{
    font-size: 6em;
    font-weight: bold;
    margin-bottom: .2em;
    line-height: 1em;
    max-width: 775px;
  }

.eventDescription p{
    max-width: 600px;
    margin-bottom:6em;
  }

.address{
  font-size: 1.5em;
    font-weight: bold;
    margin-bottom:0;
}

.acf-map {
  pointer-events: none;
  width: 100%;
  height: 400px;
  border: none;
  margin: 20px 0;
  position:relative;
}

.acf-map img {
   max-width: inherit !important;
}

.eventMap{
  font-size: 1.5em;
    font-weight: bold;
    margin-bottom:0;
    clear:both;
    max-width:100%;
}

.directions p{
  max-width: 600px;
  float:left;
  margin-right: 30px;
}

.getDirections{
  border:thin white solid;
  padding:15px;
  font-weight:700;
  font-size:1em;
  text-align: center;
  margin-bottom:6em;
}

.getDirections{
  border:thin white solid;
  padding: .7em;
  font-weight:700;
  font-size:1em;
  text-align: center;
  -webkit-transition-timing-function: ease;
   -webkit-transition: .5s; /* Safari */
   transition: .5s;
  width: 11em;
  height: auto;
  display: inline-block;

}

.getDirections:hover{
  color:black;
  background-color:white;
}

.closePage{
  position: fixed;
  font-size:5em;
  color:white;
  right: 50px;
  top: 30px;
}

.floorArea{
  display:inline-block;
  float:left;
    font-weight: 700;
    font-size: 2em;
}

.blueBox{
    height: 1.5em;
    width: 1.5em;
    background-color: blue;
    float: left;
    margin-right: 10px;
}

.orangeBox{
    height: 1.5em;
    width: 1.5em;
    background-color: orange;
    float: left;
    margin-right: 10px;
}

.yellowBox{
    height: 1.5em;
    width: 1.5em;
    background-color: yellow;
    float: left;
    margin-right: 10px;
}







@media screen and (max-width: 768px) {
.projectSelector {
    display: none;
}

  .studentPage {
    display: flex;
    flex-flow: column; } }



    @media screen and (max-height: 600px) {
    .projectSelector {
        display: none;
    }

      .studentPage {
        display: flex;
        flex-flow: column; } }

/* SIDEBAR */
.studentSidebar {
