  justify-content: center;
  display: flex;
  flex-direction: column;
  margin/**/:5%;
  .name {
    font-weight: bold;
    display: block;
    font-size: 2em; }
    .name:last-of-type {
      margin-bottom: 2em; }
  .headshot {
    height: 30vh;
    display: block; }
  .focus {
    display: block;
    font-weight: 400;
    font-size: 12px;
    }
    .socialSection{
        margin: 2em 0;
    }
    .socialIcon {
      padding: 1em;
      background: black;
      color: white;
      }
}

.studentSidebar .name {
    line-height: 1.2em;
    }

.studentSidebar .headshot{
  margin-top:1em;
  width: 30vh;
  max-width: 300px;
max-height: 300px;
}

.collaboratortitle{
   font-weight:700;
   margin-bottom:0em;
}

.sidebarTakeover .name {
    line-height: 1.2em;
    }

    .sidebarTakeover .projectName {
        font-weight: 700;
        font-size:.8em;
        display: block;
    }
    .sidebarTakeover .specialties {
        font-weight: 100;
        font-size:.8em;
        display: block;
    }

.sidebarTakeover .headshot{
  margin-top:1em;
  width: 30vh;
  max-width: 300px;
max-height: 300px;
}

/*Website Link Styling*/
.website{
  font-weight:700;
  margin: 7px 0 7px 0;
  font-size: 13px;
  letter-spacing: .035em;
}
/*Global Link Styling*/

 a {
   text-decoration:none;}




 /*Gray Link Styling*/
a.graylink:hover{
    color:#666666;
    text-decoration:none;
  }

 a.graylink:visited{
    color:#999999;
  }

 a.graylink:hover{
    color:#666666;
    text-decoration:none;
  }

 a.graylink {
    color:#999999;
  }

 a.graylink{
   -webkit-transition-timing-function: ease;
   -webkit-transition: .5s; /* Safari */
   transition: .5s;
   }





 /*Logo Link Styling*/

 a.logolink:hover{
   color:#000000;
   text-decoration:none;
 }

 a.logolink:visited{
   color:#000000;
 }

 a.logolink:hover{
   color:#222222;
   text-decoration:none;
 }

 a.logolink {
   color:#000000;
   -webkit-transition-timing-function: color ease;
   -webkit-transition: color .5s; /* Safari */
   transition: color .5s;
   }

 a.logolink:active{
   text-decoration:none;
 }

 a.logolink:focus{
   text-decoration:none;
 }


 /*social icons styling*/
 a.socialIcon:hover{
   text-decoration:none;
 }

.projectDescription {
  p:last-of-type {
  margin-bottom:2.25em;
  }
}

.projectTitle{
  margin-top:100px;
}
.firstProject{
 margin-top:0px;
}


/* MEDIA QUERY */
@media screen and (max-width: 768px) {
    #logoBig {
        display:none;
    }
    #logoSmall {
        display:block;
    }

  .closePage{
      display:none;
    }

  .studentSidebar {
      flex-grow: 2;
      cursor: pointer;
    justify-content: flex-start;
    margin: 0;
    margin-left: .4em;
      .name {
        line-height: 1.2em;
        font-weight: bold;
        display: block;
        font-size: 1.7em; }
        .name:first-of-type {
            margin-top: .6em;
        }
        .name:last-of-type {
          margin-bottom: 2em; }
      .headshot {
        display: none; }
      .focus {
        display: none; }
      .website {
        display: none; }
        .socialSection {
            display:none;
        }
    }

   .projectTitle{
      margin-top: .6em;
   }

}

@media screen and (max-height: 600px) {
    #logoBig {
        display:none;
    }
    #logoSmall {
        display:block;
    }
  .studentSidebar {
      flex-grow: 2;
      cursor: pointer;
    justify-content: flex-start;
    margin: 0;
    margin-left: .4em;
      .name {
        line-height: 1.2em;
        font-weight: bold;
        display: block;
        font-size: 1.7em; }
        .name:first-of-type {
            margin-top: .6em;
        }
        .name:last-of-type {
          margin-bottom: 2em; }
      .headshot {
        display: none; }
      .focus {
        display: none; }
      .website {
        display: none; }
        .socialSection {
            display:none;
        }
    }

   .projectTitle{
      margin-top: .6em;
   }

}

